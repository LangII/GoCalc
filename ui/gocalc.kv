


#:set MID_GREY_SCALE 0.5
#:set MID_GREY [*[MID_GREY_SCALE] * 3, 1]
#:set DARK_PRISMARINE [0.0, 0.3, 0.3, 1]
#:set PRISMARINE [0.0, 0.4, 0.4, 1]

#:set GLOBAL_SPACING 3



<MainWindow>:
    orientation:  'vertical'
    spacing:  GLOBAL_SPACING
    canvas.before:
        Color:
            rgba:  PRISMARINE
        Rectangle:
            pos:  self.pos
            size:  self.size



<MainMenuBar>:
    button_width:  80
    orientation:  'horizontal'
    height:  20
    size_hint:  [1.0, None]
    spacing:  GLOBAL_SPACING
    padding:  [GLOBAL_SPACING, GLOBAL_SPACING, GLOBAL_SPACING, 0]
    canvas.before:
        Color:
            rgba:  PRISMARINE
        Rectangle:
            pos:  self.pos
            size:  self.size



<ContentScroll>:
    layout:  layout
    do_scroll_x:  True
    do_scroll_y:  False
    BoxLayout:
        id:  layout
        padding:  [GLOBAL_SPACING, 0, GLOBAL_SPACING, GLOBAL_SPACING]
        spacing:  GLOBAL_SPACING
        orientation:  'horizontal'
        size_hint:  [None, 1.0]
        width:  self.minimum_width



<ContentPanel>:
    orientation:  'vertical'
    width:  200
    spacing:  GLOBAL_SPACING
    size_hint:  [None, 1.0]
    padding:  [GLOBAL_SPACING, GLOBAL_SPACING, GLOBAL_SPACING, GLOBAL_SPACING]
    canvas.before:
        Color:
            rgba:  DARK_PRISMARINE
        Rectangle:
            pos:  self.pos
            size:  self.size
    Label:
        text:  self.parent.panel_title
        height:  20
        size_hint:  [1.0, None]



<ContentPanelMenuBar>:
    button_size_hint:  [0.25, 1.0]
    orientation:  'horizontal'
    height:  20
    size_hint:  [1.0, None]
    spacing:  GLOBAL_SPACING



<BoardDisplay>:
    cols:  self.board_size
    size_hint:  [1.0, None]
    height:  self.width
