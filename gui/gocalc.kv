
#:set MID_GREY_SCALE 0.5
#:set MID_GREY [*[MID_GREY_SCALE] * 3, 1]
#:set DARK_PRISMARINE [0.0, 0.3, 0.3, 1]
#:set PRISMARINE [0.0, 0.4, 0.4, 1]

#:set BOARD_COLOR [0.85, 0.6, 0, 1]
#:set DATA_BOARD_COLOR [1, 1, 1, 1]
#:set BLACK_STONE_COLOR [0, 0, 0, 1]
#:set WHITE_STONE_COLOR [1, 1, 1, 1]

#:set GLOBAL_SPACING 3

#################################################################################   \/ MAIN \/   ###

<MainWindow>:
    spacing:  GLOBAL_SPACING
    orientation:  'vertical'

    canvas.before:
        Color:
            rgba:  PRISMARINE
        Rectangle:
            pos:  self.pos
            size:  self.size



<MainMenuBar>:
    button_width:  80
    size_hint:  [1.0, None]
    padding:  [GLOBAL_SPACING, GLOBAL_SPACING, GLOBAL_SPACING, 0]
    height:  20
    orientation:  'horizontal'
    spacing:  GLOBAL_SPACING

    canvas.before:
        Color:
            rgba:  PRISMARINE
        Rectangle:
            pos:  self.pos
            size:  self.size



<ContentScroll>:
    layout:  layout
    do_scroll_x:  True
    do_scroll_y:  False

    BoxLayout:
        id:  layout
        width:  self.minimum_width
        size_hint:  [None, 1.0]
        padding:  [GLOBAL_SPACING, 0, GLOBAL_SPACING, GLOBAL_SPACING]
        spacing:  GLOBAL_SPACING
        orientation:  'horizontal'

################################################################    \/ CONTENT BASE WIDGETS \/   ###

<ContentPanel>:
    title_label:  title_label
    close_button:  close_button
    width:  200
    size_hint:  [None, 1.0]
    spacing:  GLOBAL_SPACING
    padding:  [GLOBAL_SPACING, GLOBAL_SPACING, GLOBAL_SPACING, GLOBAL_SPACING]
    orientation:  'vertical'

    canvas.before:
        Color:
            rgba:  DARK_PRISMARINE
        Rectangle:
            pos:  self.pos
            size:  self.size

    BoxLayout:
        height:  20
        size_hint:  [1.0, None]
        padding:  [2, 0, 0, 0]

        Label:
            id:  title_label
            size_hint:  [0.9, 1.0]
            text_size:  self.size
            halign:  'left'
            text:  self.parent.parent.panel_title_text

        Button:
            id:  close_button
            size:  [20, 20]
            size_hint:  [None, None]
            text:  'X'



<ContentPanelMenuBar>:
    button_size_hint:  [0.25, 1.0]
    height:  20
    size_hint:  [1.0, None]
    spacing:  GLOBAL_SPACING
    orientation:  'horizontal'



<PanelSettings>:
    layout:  layout
    do_scroll_x:  False
    do_scroll_y:  True

    BoxLayout:
        id:  layout
        height:  self.minimum_height
        size_hint:  [1.0, None]
        spacing:  10
        orientation:  'vertical'

        canvas.before:
            Color:
                rgba:  DARK_PRISMARINE
            Rectangle:
                pos:  self.pos
                size:  self.size



<PanelSettingsInput>:
    orientation:  'vertical'
    size_hint:  [1.0, None]
    height:  sum([ c.height + self.spacing for c in self.children ]) - self.spacing
    spacing:  GLOBAL_SPACING
    Label:
        height:  20
        size_hint:  [1.0, None]
        halign:  'left'
        font_size:  13
        text_size:  self.size
        text:  self.parent.title_label_text + ":"
        padding_x:  GLOBAL_SPACING
        canvas.before:
            Color:
                rgba:  PRISMARINE
            Rectangle:
                pos:  self.pos
                size:  self.size



<PanelSettingsSingleButton>:
    size_hint:  [1.0, None]
    height:  20
    spacing:  GLOBAL_SPACING
    text:  self.title_label_text

#######################################################################   \/ CONTENT PANELS \/   ###

<GameBoardDisplay>:
    layout:  layout
    padding:  [0, 0, 0, 2] # needs custom padding
    GridLayout:
        id:  layout
        padding:  [2, 10, 2, 5] # needs custom padding
        size_hint:  [1.0, None]
        height:  self.width
        cols:  self.parent.board_size



<GameBoardButton>:
    board_color:  BOARD_COLOR
    black_stone_color:  BLACK_STONE_COLOR
    white_stone_color:  WHITE_STONE_COLOR



<CapturesDisplay,WeightsTitle>:
    height:  20
    size_hint:  [1.0, None]
    halign:  'center'
    valign:  'center'
    font_size:  13
    text_size:  self.size
    padding_x:  GLOBAL_SPACING

    canvas.before:
        Color:
            rgba:  PRISMARINE
        Rectangle:
            pos:  self.pos
            size:  self.size



<DataBoardDisplay>:
    layout:  layout
    padding:  [0, 0, 0, 2] # needs custom padding
    GridLayout:
        padding:  [2, 10, 2, 5] # needs custom padding
        id:  layout
        size_hint:  [1.0, None]
        height:  self.width
        cols:  self.parent.board_size



<DataBoardButton>:
    board_color:  DATA_BOARD_COLOR
    black_stone_color:  BLACK_STONE_COLOR
    white_stone_color:  WHITE_STONE_COLOR
